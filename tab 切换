	<title></title>
<style type="text/css">
	*{
		margin:0;
		padding:0;
	}
		.tab{
			margin:100px auto;
			width:800px;
			height:500px;
		}
		 .tab_list{
			position: relative;
			background-color: #f7f7f7;
			border: 1px solid #eee;
			border-bottom: 1px solid #e4393c;
			display: block;
		}
		.tab_list ul{
			list-style-type:none;	
		}
		.tab_list li{
			padding:10px 25px;
			position: relative;
			display:inline-block;
						
		}
		.tab_list .current{
			background-color:#c81623;
			color:#fff;
		}
		.item_info{
			padding:20px 0  0 20px;
		}
		.item{
			display: none;
		}
	</style>
